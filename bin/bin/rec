#!/usr/bin/env bash
#
# Start a screencast using ffmpeg (can be started from rofi, no input required).


notify-send "Screencast" "Starting to record..."

ffmpeg -f x11grab \
       -s 1366x768 \
       -an -i :0.0 \
       -c:v libvpx \
       -b:v 5M \
       -crf 10 \
       -quality realtime \
       -y ${HOME}/video/record.mkv
