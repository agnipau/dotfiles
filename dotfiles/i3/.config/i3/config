# vim:ft=sh
#
# i3 config file

# Colors
set_from_resource $c0  color0
set_from_resource $c1  color1
set_from_resource $c2  color2
set_from_resource $c3  color3
set_from_resource $c4  color4
set_from_resource $c5  color5
set_from_resource $c6  color6
set_from_resource $c7  color7
set_from_resource $c8  color8
set_from_resource $c9  color9
set_from_resource $c10 color10
set_from_resource $c11 color11
set_from_resource $c12 color12
set_from_resource $c13 color13
set_from_resource $c14 color14
set_from_resource $c15 color15

#                       class  border  backgr. text ind.
client.focused          $c0    $c0     $c7     $c0
client.focused_inactive $c0    $c0     $c8     $c0
client.unfocused        $c0    $c0     $c8     $c0
client.urgent           $c1    $c1     $c0     $c0

# Font
font pango:Iosevka 12

# Variables
set $mod  Mod4
set $alt  Mod1
set $ws1  1:
set $ws2  2:
set $ws3  3:
set $ws4  4:
set $ws5  5:
set $ws6  6:

# Kill
bindsym $mod+q kill

# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Parent/child focus
bindsym $mod+a       focus parent
bindsym $mod+Shift+a focus child

# Movement
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Splitting
bindsym $mod+o split h
bindsym $mod+v split v

# Fullscreen
bindsym $mod+Shift+x fullscreen toggle

# Container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Floating
floating_modifier $mod
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6

# Resizing (Fast)
bindsym $mod+Control+h resize shrink width    10 px or 10 ppt
bindsym $mod+Control+j resize grow height     10 px or 10 ppt
bindsym $mod+Control+k resize shrink height   10 px or 10 ppt
bindsym $mod+Control+l resize grow width      10 px or 10 ppt

# Resizing (Slow)
bindsym $mod+Shift+Control+h resize shrink width    1 px or 1 ppt
bindsym $mod+Shift+Control+j resize grow height     1 px or 1 ppt
bindsym $mod+Shift+Control+k resize shrink height   1 px or 1 ppt
bindsym $mod+Shift+Control+l resize grow width      1 px or 1 ppt

# Gaps
for_window [class="^.*"] border pixel 0 
gaps inner 10
gaps outer 50

bindsym $mod+minus       gaps inner all minus 5
bindsym $mod+plus        gaps inner all plus  5
bindsym $mod+Shift+minus gaps outer all minus 5
bindsym $mod+Shift+plus  gaps outer all plus  5

# Autostart
exec_always --no-startup-id ~/bin/polyi3
exec        --no-startup-id compton -b --config ~/.config/compton/compton.conf
exec        --no-startup-id wal -R -o ~/bin/wal-set

# Applications
bindsym $mod+Return          exec --no-startup-id st
bindsym $mod+d               exec --no-startup-id rofi -show run
bindsym $mod+Shift+d         exec --no-startup-id rofi -show window
bindsym $mod+z               exec --no-startup-id ~/bin/draw-openbox
bindsym $mod+m               exec --no-startup-id st -n musica -e cmus
bindsym $mod+p               exec --no-startup-id ~/bin/polyi3
bindsym $mod+Shift+p         exec --no-startup-id ~/bin/polyoff
bindsym $mod+c               exec --no-startup-id ~/bin/style --another-wal-dark
bindsym $mod+Shift+c         exec --no-startup-id ~/bin/style --another-wal-light
bindsym $mod+Control+c       exec --no-startup-id ~/bin/style --another-grad-dark
bindsym $mod+Control+Shift+c exec --no-startup-id ~/bin/style --another-grad-light
bindsym $mod+b               exec --no-startup-id ~/bin/style --current-wal-dark
bindsym $mod+Shift+b         exec --no-startup-id ~/bin/style --current-wal-light
bindsym $mod+Control+b       exec --no-startup-id ~/bin/style --current-grad-dark
bindsym $mod+Control+Shift+b exec --no-startup-id ~/bin/style --current-grad-light
bindsym $mod+F1              exec --no-startup-id slock
bindsym $mod+Shift+F1        exec --no-startup-id systemctl suspend
bindsym $mod+Control+F1      exec --no-startup-id poweroff
bindsym $mod+F5              exec --no-startup-id sudo ~/bin/lum --dec 10
bindsym $mod+Shift+F5        exec --no-startup-id sudo ~/bin/lum --min
bindsym $mod+F6              exec --no-startup-id sudo ~/bin/lum --inc 10
bindsym $mod+Shift+F6        exec --no-startup-id sudo ~/bin/lum --max
bindsym $mod+F7              exec --no-startup-id redshift -PO 4500
bindsym $mod+Shift+F7        exec --no-startup-id redshift -x
bindsym $mod+F10             exec --no-startup-id ~/bin/pvol --toggle
bindsym $mod+F11             exec --no-startup-id ~/bin/pvol --voldown 2
bindsym $mod+Shift+F11       exec --no-startup-id ~/bin/pvol --zero
bindsym $mod+F12             exec --no-startup-id ~/bin/pvol --volup 2
bindsym $mod+Shift+F12       exec --no-startup-id ~/bin/pvol --cento
bindsym $mod+Print           exec --no-startup-id ~/bin/scr
bindsym $mod+Shift+Print     exec --no-startup-id ~/bin/sscr
bindsym $mod+Up              exec --no-startup-id cmus-remote --stop
bindsym $mod+Shift+Up        exec --no-startup-id cmus-remote --play
bindsym $mod+Down            exec --no-startup-id cmus-remote --pause
bindsym $mod+Left            exec --no-startup-id cmus-remote --seek -5s
bindsym $mod+Shift+Left      exec --no-startup-id cmus-remote --prev
bindsym $mod+Right           exec --no-startup-id cmus-remote --seek +5s
bindsym $mod+Shift+Right     exec --no-startup-id cmus-remote --next

# i3 management
bindsym $mod+r         reload
bindsym $mod+Shift+r   restart
bindsym $mod+Control+q exec i3-msg exit

# Assign apps to workspaces
assign [class="Firefox"] $ws2
