; vim:ft=cfg
;
; C.A.V.A. config file.

[general]
framerate          = 60
autosens           = 1
bars               = 0
bar_width          = 2
bar_spacing        = 1
lower_cutoff_freq  = 50
higher_cutoff_freq = 10000

[input]
; MPD.
method = fifo
source = /tmp/mpd.fifo

; PulseAudio.
;method = pulse
;source = auto

; ALSA.
;method = alsa
;source = hw:Loopback,1

[output]
method          = ncurses
channels        = stereo
raw_target      = /dev/stdout
data_format     = binary
bit_format      = 16bit
ascii_max_range = 1000
bar_delimiter   = 59
frame_delimiter = 10

[color]
background = black
foreground = red

[smoothing]
integral   = 70
monstercat = 1
waves      = 0
gravity    = 100
ignore     = 0

[eq]
1 = 2    # bass
2 = 2
3 = 1    # midtone
4 = 1
5 = 0.5  # treble
