<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://openbox.org/">
    <menu id="root-menu" label="openbox">
      <item label="Terminale">
        <action name="Execute">
          <execute>~/bin/draw</execute>
        </action>
      </item>
      <item label="Chromium">
        <action name="Execute">
          <execute>chromium</execute>
        </action>
      </item>
      <item label="Musica">
        <action name="Execute">
          <execute>xst -n musica -e ~/bin/musica-maestro</execute>
        </action>
      </item>
      <menu id="Programmi" label="Programmi">
        <item label="Telegram">
          <action name="Execute">
            <execute>telegram-desktop</execute>
          </action>
        </item>
        <item label="Spotify">
          <action name="Execute">
            <execute>spotify</execute>
          </action>
        </item>
        <item label="Thunar">
          <action name="Execute">
            <execute>thunar</execute>
          </action>
        </item>
      </menu>
      <separator/>
      <menu id="Alimentazione" label="Alimentazione">
        <item label="Blocca">
          <action name="Execute">
            <execute>slock</execute>
          </action>
        </item>			
        <item label="Sospendi">
          <action name="Execute">
            <execute>systemctl suspend</execute>
          </action>
        </item>			
        <item label="Riavvia">
          <action name="Execute">
            <execute>reboot</execute>
          </action>
        </item>
        <item label="Spegni">
          <action name="Execute">
            <execute>poweroff</execute>
          </action>
        </item>
      </menu>
      <separator/>
      <menu id="Openbox" label="Openbox">
        <item label="Esci">
          <action name="Exit"/>
        </item>
        <item label="Riavvia">
          <action name="Restart"/>
        </item>
      </menu>
    </menu>
</openbox_menu>
