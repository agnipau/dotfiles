; vim:ft=dosini

; Colors loaded from ~/.Xresources and generated by pywal
[colors]
background = ${xrdb:color0}
foreground = ${xrdb:color7}
primary = ${xrdb:color1}
secondary = ${xrdb:color2}
alert = ${xrdb:color3}
faint = ${xrdb:color8}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = eDP-1-1
bottom = true
fixed-center = true
width = 100%
height = 40
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
radius = 0.0
padding= 3
module-margin = 1
font-0 = Iosevka Term:size=12:antialias=true:autohint=false;3
font-1 = FontAwesome:size=12:antialias=true:autohint=false;3
modules-left = openbox_wms network battery volume brightness
modules-center = date
modules-right = prev stitle next
locale = it_IT.UTF-8

[module/openbox_wms]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = true
icon-0 = uno;1
icon-1 = due;2
icon-2 = tre;3
icon-3 = quattro;4
icon-4 = cinque;5
icon-5 = sei;6
format = <label-state>
label-urgent = %icon%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.alert}
label-active = %icon%
label-active-background = ${colors.background}
label-active-foreground = ${colors.foreground}
label-occupied = %icon%
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.foreground}
label-empty = 
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.foreground}

[module/network]
type = custom/script
exec = ~/bin/net
interval = 1
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label = 
click-left = st -n flt_wifi -g 50x22 -e sudo wifi-menu

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging =  %percentage%%
label-charging-background = ${colors.background}
label-charging-foreground = ${colors.foreground}
label-discharging = %percentage%%
label-discharging-background = ${colors.background}
label-discharging-foreground = ${colors.foreground}
ramp-capacity-0 =  
ramp-capacity-0-background = ${colors.background}
ramp-capacity-0-foreground = ${colors.foreground}
ramp-capacity-1 =  
ramp-capacity-1-background = ${colors.background}
ramp-capacity-1-foreground = ${colors.foreground}
ramp-capacity-2 =  
ramp-capacity-2-background = ${colors.background}
ramp-capacity-2-foreground = ${colors.foreground}
ramp-capacity-3 =  
ramp-capacity-3-background = ${colors.background}
ramp-capacity-3-foreground = ${colors.foreground}
ramp-capacity-4 =  
ramp-capacity-4-background = ${colors.background}
ramp-capacity-4-foreground = ${colors.foreground}

[module/volume]
type = internal/volume
mapped = true
format-volume = <ramp-volume> <label-volume>
label-volume-background = ${colors.background}
label-volume-foreground = ${colors.foreground}
ramp-volume-0 = 
ramp-volume-0-background = ${colors.background}
ramp-volume-0-foreground = ${colors.foreground}
ramp-volume-1 = 
ramp-volume-1-background = ${colors.background}
ramp-volume-1-foreground = ${colors.foreground}
ramp-volume-2 = 
ramp-volume-2-background = ${colors.background} 
ramp-volume-2-foreground = ${colors.foreground} 
label-muted =  muted
label-muted-background = ${colors.background}
label-muted-foreground = ${colors.foreground}

[module/brightness]
type = custom/script
exec = ~/bin/lum --current
interval = 0.1
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label =  %output%
scroll-up = sudo ~/bin/lum --inc 5
scroll-down = sudo ~/bin/lum --dec 5
click-left = redshift -PO 4500
click-right = redshift -x

[module/date]
type = internal/date
interval = 1
date = "%a, %d %b "
date-alt = "%a, %d %b "
time = %H:%M
time-alt = %H:%M:%S
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label = %date% %time%
label-foreground = ${colors.foreground}

[module/prev]
type = custom/script
format-text = label
label = 
exec = printf '%s' label
click-left = cmus-remote --prev
format-foreground = ${colors.foreground}

[module/stitle]
type = custom/script
exec = ~/bin/cmus-info
click-left = cmus-remote --pause
click-right = cmus-remote --play
scroll-up = cmus-remote --seek +5s
scroll-down = cmus-remote --seek -5s
interval = 0.8
format-foreground = ${colors.foreground}

[module/next]
type = custom/script
format-text = label
label = 
exec = printf '%s' label
click-left = cmus-remote --next
format-foreground = ${colors.foreground}
