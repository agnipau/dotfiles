#!/usr/bin/env bash
#
# Triggers zen mode.

# shellcheck source=/dev/null
. "${HOME}/.cache/wal/colors.sh"

# Kill sources of distraction.
killall -9 telegram-desktop \
           Discord &> /dev/null

# Create and set a gradient image as wallpaper using hsetroot.
# -gradient 0 = up
# -gradient 90 = right
# -gradient 180 = down
# -gradient 270 = left
# -gradient 360 = up
# ...
# shellcheck disable=SC2154
hsetroot -add "$color1" -add "$color2" -gradient 0

clear
printf '%s\n' "Ora concentrati e porta a termine il tuo obbiettivo."
