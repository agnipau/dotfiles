#!/usr/bin/env bash
#
# Generate a list of installed pkgs in Void Linux.

xbps-query -l | awk '{ print $2 }' \
              | xargs -n1 xbps-uhelper getpkgname \
              | fmt > void_installed_pkgs

n_pkgs="$(wc -w void_installed_pkgs | cut -d' ' -f1)"

echo "==> You have installed $n_pkgs packages"

sed -i -e 's/ discord//' \
       -e 's/ spotify//' \
       -e 's/ openbox//' \
       void_installed_pkgs
