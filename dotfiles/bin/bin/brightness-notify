#!/usr/bin/env bash
#
# Prints the state of my laptop's battery.

# shellcheck source=/dev/null
. "${HOME}/.local/share/icons-in-terminal/icons_bash.sh"

cur="$(( $(</sys/class/backlight/intel_backlight/brightness) * 100 ))"
max="$(</sys/class/backlight/intel_backlight/max_brightness)"
fin="$(( cur / max + 1 ))"

# shellcheck disable=SC2059,2154,1117
ico="$(printf "$fa_lightbulb_o\n")"

notify-send --expire-time=3000 "${ico} ${fin}%"
