; Gruvbox dark
[colors]
background = #1d2021
foreground = #ebdbb2
dimmed = #665c54
green = #b8bb26
red = #fb4934

; ; Nord
; [colors]
; background = #2e3440
; foreground = #eceff4
; dimmed = #616e88
; green = #a3be8c
; red = #bf616a

; ; Material darker
; [colors]
; background = #212121
; foreground = #eeffff
; dimmed = #545454
; green = #c3e88d
; red = #ff5370

[bar/main]
; monitor = ${env:MONITOR:eDP1}
monitor = ${env:MONITOR:HDMI1}
width = 100%
height = 2.5%
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 16
border-color = ${colors.background}
line-size = 2
padding = 1
module-margin = 1

; font-0 = "Roboto:size=15;1"
font-0 = "Roboto:size=11;1"

modules-left = date ewmh xwindow
modules-right = wlan pulseaudio cpu memory battery

tray-position = right
tray-padding = 2
tray-maxsize = 24

[module/pulseaudio]
type = internal/pulseaudio
sink = @DEFAULT_SINK@
use-ui-max = true
interval = 5

format-volume = <label-volume>
format-volume-prefix = "Volume "
format-volume-prefix-foreground = ${colors.dimmed}

format-muted-prefix = "Volume "
format-muted-prefix-foreground = ${colors.dimmed}
label-muted = OFF
label-muted-foreground = ${colors.foreground}

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
; label = %title:0:30:...%
label = %title%

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true

label-active = " %name% "
label-active-foreground = ${colors.foreground}

label-occupied = " %name% "
label-occupied-foreground = ${colors.green}

label-urgent = " %name% "
label-urgent-foreground = ${colors.red}

label-empty = " %name% "
label-empty-foreground = ${colors.dimmed}

[module/cpu]
type = internal/cpu
interval = 2.0
format-prefix = "CPU "
format-prefix-foreground = ${colors.dimmed}
format-foreground = ${colors.foreground}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2.0
format-prefix = "RAM "
format-prefix-foreground = ${colors.dimmed}
format-foreground = ${colors.foreground}
label = %percentage_used:2%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-connected-foreground = ${colors.foreground}

label-disconnected = "No Wi-Fi"
label-disconnected-foreground = ${colors.foreground}

ramp-signal-0 = 1/5
ramp-signal-1 = 2/5
ramp-signal-2 = 3/5
ramp-signal-3 = 4/5
ramp-signal-4 = 5/5
ramp-signal-foreground = ${colors.dimmed}

[module/date]
type = internal/date
interval = 5

date = "%A %d"
date-alt = %A %B %d

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 87

format-charging = <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full = <label-full>

ramp-capacity-0 = ⚋
ramp-capacity-1 = ⚊
ramp-capacity-2 = ⚍
ramp-capacity-3 = ⚌
ramp-capacity-foreground = ${colors.dimmed}

label-charging = Charging %percentage%%
label-discharging = %percentage%%
label-full = " Battery Full "

[settings]
screenchange-reload = true

