! .Xmodmap
!
! xmodmap config file.

! Make Lock act like Control.
clear lock
clear control
add control = Caps_Lock Control_L Control_R
keysym Caps_Lock = Control_L Caps_Lock NoSymbol NoSymbol

! Make Menu (useless) and Scroll_Lock (useless) output something really common in italian (Ãˆ).
keysym Menu = U00C8
keysym Scroll_Lock = U00C8
