! .Xmodmap
!
! xmodmap config file.

! Make Lock act like Control.
clear lock
clear control
add control = Caps_Lock Control_L Control_R
keysym Caps_Lock = Control_L Caps_Lock NoSymbol NoSymbol

! Make Menu output tilde (~).
keysym Menu = U007E
! Make Num_Lock output something really useful in italian (Ãˆ).
keysym Num_Lock = U00C8
